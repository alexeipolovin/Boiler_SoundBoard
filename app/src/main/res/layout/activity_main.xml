<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/boiler"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5"
        android:useDefaultMargins="true"
        tools:context=".ui.MainActivity">

        <Button
            android:id="@+id/firstButton"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_columnWeight="0.5"
            android:text="🐟" />

        <Button
            android:id="@+id/secondButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:text="Кто на шпалах" />

        <Button
            android:id="@+id/thirdButton"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:text="Идиот" />

        <Button
            android:id="@+id/fourthButton"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:text="Заебал" />

        <Button
            android:id="@+id/fifthButton"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:text="Саня..." />

        <Button
            android:id="@+id/sixthButton"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:text="Я в говно" />
        <Button
            android:id="@+id/seventhButton"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:text="Ты деградируешь" />
        <Button
            android:id="@+id/eithButton"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:text="BoilerHero" />
        <Button
            android:id="@+id/ninthButton"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:text="Мудрость" />
    </GridLayout>

